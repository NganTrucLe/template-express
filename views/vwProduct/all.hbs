<div class="card">
  <h4 class="card-header d-flex justify-content-between">
    Products
  </h4>
  <div class="card-body">
    {{#if this.empty}}
      <h5 class="card-title">Không có dữ liệu</h5>
      <p class="card-text">With supporting text below as a natural lead-in to
        additional content.</p>
    {{else}}
      <div class="row">
        {{#each this.products}}
          <div class="col-sm-4 mb-4 d-flex" style="flex-direction: column">
            <div class="card h-100">
              <img
                class="card-img-top"
                src="/public/sp/{{ProID}}/main_thumbs.jpg"
                alt="Title"
              />
              <div class="card-body">
                <h4 class="card-title">{{ProName}}</h4>
                <h4 class="card-title text-danger">{{format_number Price}}</h4>
                <p class="card-text">{{TinyDes}}</p>
              </div>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between">
              <a
                name=""
                id=""
                class="btn btn-outline-primary"
                href="/products/detail/{{ProID}}"
                role="button"
              >
                <i class="fa fa-eye" aria-hidden="true"></i>
                Xem chi tiết</a>
              <a
                name=""
                id=""
                class="btn btn-outline-success"
                href="#"
                role="button"
              >
                <i class="fa fa-cart-plus" aria-hidden="true"></i>
                Thêm giỏ hàng</a>
            </div>
          </div>
        {{/each}}
      </div>
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="javascript:;" aria-label="Previous">
            <span aria-hidden="true">Previous</span>
          </a>
        </li>
        {{#each this.numPage}}
          <li class="page-item"><a
              class="page-link"
              href="?page={{value}}"
            >{{value}}</a></li>
        {{/each}}

        <li class="page-item">
          <a class="page-link" href="javascript:;" aria-label="Next">
            <span aria-hidden="true">Next</span>
          </a>
        </li>
      </ul>
    {{/if}}
  </div>
</div>