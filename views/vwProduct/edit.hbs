<form method="post">
  <div class="card">
    <h5 class="card-header">
      Edit Category
    </h5>
    <div class="card-body">
      <div class="form-group">
        <label for="txtProID">#</label>
        <input
          type="text"
          name="ProID"
          id="txtProID"
          class="form-control"
          readonly
          value="{{this.product.ProID}}"
        />
      </div>
      <div class="form-group mt-3">
        <label for="txtProName">Product Name</label>
        <input
          type="text"
          name="ProName"
          id="txtProName"
          class="form-control"
          placeholder="Laptop"
          value="{{this.product.ProName}}"
        />
      </div>
    </div>
    <div class="card-footer text-muted">
      <a
        class="btn btn-outline-success mr-3"
        href="/admin/products"
        role="button"
      >
        <i class="bi bi-skip-backward-fill"></i>
        List
      </a>
      <button
        type="submit"
        class="btn btn-danger"
        formaction="/admin/products/del"
      >
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
      <button
        type="submit"
        class="btn btn-primary"
        formaction="/admin/products/patch"
      >
        <i class="bi bi-check2"></i>
        Save
      </button>
    </div>
  </div>
</form>